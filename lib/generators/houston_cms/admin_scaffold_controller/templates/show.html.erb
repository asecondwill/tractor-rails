<%% add_breadcrumb "<%= human_name.pluralize %>", admin_<%= plural_table_name %>_path %>
<%% add_breadcrumb "Show", [:admin, @<%= singular_table_name %>] %>
<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1><%= human_name %> Details</h1>
      <div>
        <%%= link_to "Edit", edit_admin_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-primary" %>
        <%%= link_to "Back", admin_<%= index_helper %>_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <div class="row mb-3">
          <div class="col-sm-3">
            <strong><%= attribute.human_name %>:</strong>
          </div>
          <div class="col-sm-9">
            <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
          </div>
        </div>
<% end -%>
      </div>
    </div>
  </div>
</div>