

<div class="card mb-4">
  <div class="card-body">
    <%= simple_form_for([:admin, @page]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
        <h3>Meta</h3>    
        <%= f.input :slug %>
        <%= f.input :published %>
        <%= f.input :description %>            
        <h3>Banner</h3>
        <%= render "admin/shared/file_field",
              f: f,
              field: 'banner',
              label: 'Banner Image',
              hint: 'Banner Image. Max 800kb.'
            %>
        <%=f.input :banner_text,  input_html: {class: 'easymde'} %>
        
        <h3>Presentation</h3>
        <%= f.input :show_title %>
        <%= f.input :template, as: :select, collection: ['default', "articles", "comittee", 'newsroom'],  include_blank: false %>
     
      </div>

      <div class="form-actions actions">
        <%= link_to 'Pages', admin_pages_path %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>


