<div class="container-fluid">
  <h1>Snippets</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Slug</th>       
        <th>Updated</th>
        <th>Edited By</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @snippets.each do |snippet| %>
        <tr>
          <td><%= snippet.name %></td>
          <td><%= snippet.slug %></td>   
          <td><%= time_ago_in_words snippet.updated_at %> ago</td>   
          <td class="text-muted"> <%= current_user.to_s %> </td>   
          <td class="actions">
            <%= link_to 'Edit', edit_admin_snippet_path(snippet), class: 'btn btn-primary' %>
            <%= link_to "<i class='bi-trash'></i>".html_safe, admin_snippet_path(snippet), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Snippet', new_admin_snippet_path, class: "btn btn-success min-width-btn" %>
</div>
