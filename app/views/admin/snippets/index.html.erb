<%   add_breadcrumb "Snippets", :admin_snippets_path %>

<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Snippets</h2>
      <%= link_to '<i class="bi bi-scissors"></i>New Snippet'.html_safe, new_admin_snippet_path, class: "btn btn-success min-width-btn" %>
    </div>      
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>Name</th>
          <th>Slug</th>       
          <th>Updated</th>
          <th>Edited By</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @snippets.each do |snippet| %>
          <tr>
            <td><%= snippet.id %></td>
            <td><%= snippet.name %></td>
            <td><%= snippet.slug %></td>   
            <td><%= time_ago_in_words snippet.updated_at %> ago</td>   
            <td class="text-muted"> <%= current_user.to_s %> </td>   
            <td class="actions">
              <%= link_to 'Edit', edit_admin_snippet_path(snippet), class: 'btn  btn-sm btn-outline-primary' %>
              <%= link_to "<i class='bi-trash'></i>".html_safe, admin_snippet_path(snippet), class: 'btn  btn-sm btn-outline-danger', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    
  </div>
</div>
