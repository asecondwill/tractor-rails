  <% 
    add_breadcrumb "Users", :admin_users_path 
    add_breadcrumb "#{@user.email}", :admin_user_path
  %>
   

<div class="card">
  <div class="card-header">
    <h5 >
      User: <%= @user.name %> // <%= @user.email %>
    </h5>
  </div>
  <div class="card-body">
    <dl class="dl-columns">
    <dt>Site Admin</dt> <dd><%= @user.site_admin %></dd>
    <dt>Debug</dt> <dd><%= @user.debug %></dd>
    <dt>Created</dt><dd><%= @user.created_at %></dd>
    <dt>TimeZone</dt><dd> <%= @user.time_zone %></dd>
    <dt>Confirmed At</dt><dd> <%# @user.confirmed_at %></dd>
    <dt>Locked At</dt><dd><%# @user.locked_at %></dd>
    </dl>
    
    <%= link_to "Edit", edit_admin_user_path(@user) %> <br>
    <% if @user != current_user %>
    <%= button_to "Impersonate", impersonate_admin_user_path(@user), data: {turbo: false}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

<br>

