<%= simple_form_for([:admin, @user]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= render "admin/shared/errors", errors: @user.errors %>
  <div class="form-inputs">
  
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password, hint: 'Leave blank unless you want to change their password. Length: 8. Use 1 uppercase, 1 lowercase, 1 digit and 1 special character (for example ! or -)' %>
    <%= f.input :time_zone %>
    <hr>
    <h3>Security Powers for CMS</h3>
    <%= f.input :site_admin %>
    <%= f.input :debug %>
   
    
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
